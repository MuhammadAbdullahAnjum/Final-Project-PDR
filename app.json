{
  "expo": {
    "name": "PDR",
    "slug": "disasterApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "disasterapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.disasterApp",
      "buildNumber": "1.0.1",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app needs location access to provide you with local weather forecasts and disaster alerts for your area.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app needs location access to provide you with local weather forecasts and disaster alerts for your area, even when the app is in the background.",
        "NSLocationAlwaysUsageDescription": "This app needs location access to provide you with local weather forecasts and disaster alerts for your area, even when the app is closed.",
        "NSLocationUsageDescription": "This app needs location access to provide disaster alerts and weather information.",
        "UIBackgroundModes": [
          "location",
          "background-processing",
          "background-fetch",
          "remote-notification"
        ],
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "google-signin",
            "CFBundleURLSchemes": [
              "com.googleusercontent.apps.139120385098-pqfbrjjp3fqubai9c7ppo31c376umrl7"
            ]
          },
          {
            "CFBundleURLName": "expo-auth-session",
            "CFBundleURLSchemes": ["disasterapp"]
          }
        ]
      }
    },
    "android": {
      "googleServicesFile": "./android/app/google-services.json",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "RECEIVE_BOOT_COMPLETED",
        "VIBRATE",
        "WAKE_LOCK",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.disasterApp",
      "versionCode": 2,
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "disasterapp"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "@react-native-firebase/app",
        {
          "android": {
            "googleServicesFile": "./android/app/google-services.json"
          }
        }
      ],
      [
        "@react-native-firebase/messaging",
        {
          "android": {
            "enabled": true
          },
          "ios": {
            "enabled": false
          }
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.139120385098-pqfbrjjp3fqubai9c7ppo31c376umrl7"
        }
      ],
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "This app needs access to your location to provide emergency alerts based on your current area.",
          "locationAlwaysPermission": "This app needs background location access to send you critical safety alerts even when the app is closed.",
          "locationWhenInUsePermission": "This app needs location access to provide weather updates and local emergency information.",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FFFFFF"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification-icon.png",
          "color": "#4ECDC4"
        }
      ],
      "expo-task-manager",
      "expo-web-browser",
      "expo-secure-store",
      "expo-font",
      "expo-localization"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "runtimeVersion": "1.0.1",
    "updates": {
      "url": "https://u.expo.dev/fdd0ee21-9313-44ae-850a-445938ce044d"
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "fdd0ee21-9313-44ae-850a-445938ce044d"
      }
    }
  }
}
